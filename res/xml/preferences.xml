    <PreferenceCategory android:title="操作" >
        <Preference
            android:key="gesture_and_motion"
            android:title="手势和动作" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="com.zte.zgesture.MainSettingActivity"
                android:targetPackage="com.zte.zgesture" />
        </Preference>
        <Preference
            android:key="smartshow"
            android:title="智能分屏" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="com.powermo.SmartBar.MasterEntryActivity"
                android:targetPackage="com.powermo.SmartBar" />
        </Preference>
        <Preference
            android:key="mipop"
            android:title="屏幕助手" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="com.android.mipop.MIPopActivity"
                android:targetPackage="com.android.mipop" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:title="显示" >
        <Preference
            android:key="screen_effect"
            android:title="显示效果" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="com.android.stocksettings.ScreenEffectSettings"
                android:targetPackage="com.android.stocksettings" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:title="电源" >
        <Preference
            android:key="quick_start"
            android:title="快速启动" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="com.android.stocksettings.QuickStartHelper"
                android:targetPackage="com.android.stocksettings" />
        </Preference>
        <Preference
            android:key="schedulepoweronoff"
            android:title="定时开关机" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="com.android.stocksettings.powercontrol.ScheduledPowerOnOffActivity"
                android:targetPackage="com.android.stocksettings" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:title="网络" >
        <Preference
            android:key="hotspot"
            android:title="WLAN热点" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="com.android.stocksettings.wifi.HotspotSettings"
                android:targetPackage="com.android.stocksettings" />
        </Preference>
        <Preference
            android:key="pppoe"
            android:title="拨号上网" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="com.android.stocksettings.pppoe.PppoeSettings"
                android:targetPackage="com.android.stocksettings" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:title="高级设置" >
        <CheckBoxPreference
            android:key="touch_gesture"
            android:summaryOff="双击亮屏关闭"
